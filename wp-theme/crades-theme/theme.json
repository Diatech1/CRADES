{
  "$schema": "https://schemas.wp.org/wp/6.7/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "layout": {
      "contentSize": "1140px",
      "wideSize": "1320px"
    },
    "color": {
      "defaultPalette": false,
      "defaultGradients": false,
      "palette": [
        { "slug": "primary", "color": "#044bad", "name": "Bleu CRADES" },
        { "slug": "navy", "color": "#032d6b", "name": "Bleu Navy" },
        { "slug": "sky", "color": "#3a7fd4", "name": "Bleu Ciel" },
        { "slug": "ice", "color": "#c7ddf5", "name": "Bleu Glace" },
        { "slug": "frost", "color": "#eef4fb", "name": "Bleu Givré" },
        { "slug": "gold", "color": "#b8943e", "name": "Or" },
        { "slug": "gold-light", "color": "#d4b262", "name": "Or Clair" },
        { "slug": "white", "color": "#ffffff", "name": "Blanc" },
        { "slug": "light-gray", "color": "#f8fafc", "name": "Gris Clair" },
        { "slug": "gray", "color": "#64748b", "name": "Gris" },
        { "slug": "dark-gray", "color": "#374151", "name": "Gris Foncé" },
        { "slug": "black", "color": "#111827", "name": "Noir" }
      ],
      "gradients": [
        {
          "slug": "primary-to-navy",
          "gradient": "linear-gradient(135deg, var(--wp--preset--color--primary) 0%, var(--wp--preset--color--navy) 100%)",
          "name": "Bleu vers Navy"
        },
        {
          "slug": "frost-to-white",
          "gradient": "linear-gradient(180deg, var(--wp--preset--color--frost) 0%, var(--wp--preset--color--white) 100%)",
          "name": "Givré vers Blanc"
        }
      ]
    },
    "typography": {
      "fluid": true,
      "fontFamilies": [
        {
          "fontFamily": "Montserrat, system-ui, -apple-system, sans-serif",
          "slug": "montserrat",
          "name": "Montserrat",
          "fontFace": [
            { "fontFamily": "Montserrat", "fontWeight": "300", "fontStyle": "normal", "src": ["https://fonts.gstatic.com/s/montserrat/v26/JTUHjIg1_i6t8kCHKm4532VJOt5-QNFgpCs16Hw0aXp-p7K4KLg.woff2"] },
            { "fontFamily": "Montserrat", "fontWeight": "400", "fontStyle": "normal", "src": ["https://fonts.gstatic.com/s/montserrat/v26/JTUHjIg1_i6t8kCHKm4532VJOt5-QNFgpCtr6Hw0aXp-p7K4KLg.woff2"] },
            { "fontFamily": "Montserrat", "fontWeight": "500", "fontStyle": "normal", "src": ["https://fonts.gstatic.com/s/montserrat/v26/JTUHjIg1_i6t8kCHKm4532VJOt5-QNFgpCtZ6Hw0aXp-p7K4KLg.woff2"] },
            { "fontFamily": "Montserrat", "fontWeight": "600", "fontStyle": "normal", "src": ["https://fonts.gstatic.com/s/montserrat/v26/JTUHjIg1_i6t8kCHKm4532VJOt5-QNFgpCu170w0aXp-p7K4KLg.woff2"] },
            { "fontFamily": "Montserrat", "fontWeight": "700", "fontStyle": "normal", "src": ["https://fonts.gstatic.com/s/montserrat/v26/JTUHjIg1_i6t8kCHKm4532VJOt5-QNFgpCuM70w0aXp-p7K4KLg.woff2"] },
            { "fontFamily": "Montserrat", "fontWeight": "800", "fontStyle": "normal", "src": ["https://fonts.gstatic.com/s/montserrat/v26/JTUHjIg1_i6t8kCHKm4532VJOt5-QNFgpCvr70w0aXp-p7K4KLg.woff2"] }
          ]
        }
      ],
      "fontSizes": [
        { "slug": "x-small", "size": "0.6875rem", "name": "Très petit" },
        { "slug": "small", "size": "0.8125rem", "name": "Petit" },
        { "slug": "medium", "size": "1rem", "name": "Moyen" },
        { "slug": "large", "size": "1.25rem", "name": "Grand" },
        { "slug": "x-large", "size": "1.75rem", "name": "Très grand" },
        { "slug": "xx-large", "size": "2.5rem", "name": "Titre héro" },
        { "slug": "xxx-large", "size": "3.25rem", "name": "Titre principal" }
      ]
    },
    "spacing": {
      "units": ["px", "em", "rem", "%", "vh", "vw"],
      "spacingSizes": [
        { "slug": "10", "size": "0.25rem", "name": "1" },
        { "slug": "20", "size": "0.5rem", "name": "2" },
        { "slug": "30", "size": "1rem", "name": "3" },
        { "slug": "40", "size": "1.5rem", "name": "4" },
        { "slug": "50", "size": "2rem", "name": "5" },
        { "slug": "60", "size": "3rem", "name": "6" },
        { "slug": "70", "size": "4rem", "name": "7" },
        { "slug": "80", "size": "6rem", "name": "8" }
      ]
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "shadow": {
      "presets": [
        { "slug": "sm", "shadow": "0 1px 2px 0 rgba(0,0,0,0.05)", "name": "Petit" },
        { "slug": "md", "shadow": "0 4px 6px -1px rgba(0,0,0,0.1), 0 2px 4px -2px rgba(0,0,0,0.1)", "name": "Moyen" },
        { "slug": "lg", "shadow": "0 10px 15px -3px rgba(0,0,0,0.1), 0 4px 6px -4px rgba(0,0,0,0.1)", "name": "Grand" }
      ]
    },
    "custom": {
      "lineHeight": {
        "tight": 1.2,
        "normal": 1.5,
        "relaxed": 1.75
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--dark-gray)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--montserrat)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "padding": {
        "left": "var(--wp--preset--spacing--30)",
        "right": "var(--wp--preset--spacing--30)"
      }
    },
    "elements": {
      "heading": {
        "color": { "text": "var(--wp--preset--color--navy)" },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--montserrat)",
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      },
      "h1": { "typography": { "fontSize": "clamp(2rem, 4vw, 3.25rem)" } },
      "h2": { "typography": { "fontSize": "clamp(1.5rem, 3vw, 2.25rem)" } },
      "h3": { "typography": { "fontSize": "clamp(1.125rem, 2vw, 1.5rem)" } },
      "h4": { "typography": { "fontSize": "1.125rem" } },
      "link": {
        "color": { "text": "var(--wp--preset--color--primary)" },
        ":hover": { "color": { "text": "var(--wp--preset--color--navy)" } }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--white)"
        },
        "border": { "radius": "0.5rem" },
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontWeight": "600"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--navy)",
            "text": "var(--wp--preset--color--white)"
          }
        }
      }
    },
    "blocks": {
      "core/navigation": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--small)",
          "fontWeight": "500"
        }
      },
      "core/site-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "700"
        },
        "color": { "text": "var(--wp--preset--color--primary)" }
      },
      "core/post-title": {
        "typography": {
          "fontWeight": "700"
        }
      },
      "core/quote": {
        "border": {
          "color": "var(--wp--preset--color--primary)",
          "width": "0 0 0 4px"
        }
      }
    }
  },
  "templateParts": [
    { "name": "header", "title": "En-tête", "area": "header" },
    { "name": "footer", "title": "Pied de page", "area": "footer" },
    { "name": "ministry-bar", "title": "Barre Ministère", "area": "header" }
  ],
  "customTemplates": [
    { "name": "home", "title": "Accueil CRADES", "postTypes": ["page"] },
    { "name": "publications-archive", "title": "Archive Publications", "postTypes": ["page"] },
    { "name": "actualites-archive", "title": "Archive Actualités", "postTypes": ["page"] },
    { "name": "contact", "title": "Contact", "postTypes": ["page"] },
    { "name": "dashboards", "title": "Tableaux de bord", "postTypes": ["page"] },
    { "name": "data", "title": "Données & API", "postTypes": ["page"] }
  ]
}
